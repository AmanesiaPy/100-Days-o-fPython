import turtle
import pandas

screen = turtle.Screen()
screen.title("US States Game")
image = "blank_states_img.gif"
screen.addshape(image)
turtle.shape(image)
tim = turtle.Turtle()
tim.penup()
tim.hideturtle()

data = pandas.read_csv("50_states.csv")
states_list = data["state"].to_list()
correct_guess = 0
answer_list = []

game_is_on = True
while game_is_on:
    answer_state = screen.textinput(title=f"{correct_guess}/50 Correct", prompt="What's another state name?").title()
    if answer_state == "Exit":
        break
    if answer_state not in answer_list:
        if answer_state in states_list:
            data_correct_answer = data[data["state"] == answer_state]
            tim.goto(int(data_correct_answer.x), int(data_correct_answer.y))
            tim.write(f"{answer_state}", align="center", font=("Arial", 8, "normal"))
            correct_guess += 1

    if correct_guess == 50:
        game_is_on = False

with open("states_to_learn.csv", "w") as file:
    file.write("States to learn:\n")
    missing_state = [state for state in states_list if state not in answer_list]
    file.write(f"{missing_state}")

